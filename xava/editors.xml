<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE editors SYSTEM "dtds/editors.dtd">

<editors>

	<!-- for big and unlimited texts without a huge area -->
	<editor url="bigtextAreaEditor.jsp">
		<for-stereotype stereotype="BIGTEXT_AREA" />
	</editor>

	<editor url="textEditor.jsp">
		<formatter class="ch.speleo.scis.ui.formatter.TimestampFormatter" />
		<for-stereotype stereotype="TIMESTAMP" />
	</editor>

    <editor name="DocumentLibrary" url="liferayDocumentLibraryEditor.jsp" always-reload="true">
        <property name="rootFolderNameOrId" value="SCIS"/>
        <property name="alsoDeleteFile" value="true"/>
        <for-stereotype stereotype="SCIS_DOCUMENT_LIBRARY" />
    </editor>

</editors>
